# Environment Configuration for Bioinformatics Semantic Search Engine

# ChromaDB Configuration
CHROMA_DB_DIR=./data/chroma
EMBEDDING_MODEL=microsoft/BiomedNLP-BiomedBERT-base-uncased-abstract-fulltext
REPOSITORY_DATA_DIR=./data/repositories

# Logging Configuration
LOG_LEVEL=INFO

# Original MCP Server URLs
BIO_MCP_URL=https://mcp.so/server/bio-mcp/longevity-genie
PUBMED_MCP_URL=https://mcp.so/server/PubMed-MCP/BioContext
BIO_CONTEXT_URL=https://mcp.so/server/BioContext/EazyAl
MCP_CODE_EXECUTOR_URL=http://localhost:8000

# Enhanced MCP Server URLs (Community-supported alternatives)
EXA_SEARCH_MCP_URL=https://api.exa.ai/search
TAVILY_MCP_URL=https://api.tavily.com/search

# Scientific Literature APIs (Free, no API keys required)
PUBMED_EUTILS_BASE=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
EUROPE_PMC_BASE=https://www.ebi.ac.uk/europepmc/webservices/rest

# API Keys for Enhanced MCP Services
EXA_API_KEY=KEY
TAVILY_API_KEY=KEY

# Smithery Platform Configuration
SMITHERY_API_KEY=KEY
SMITHERY_API_URL=https://api.smithery.ai

# Google Gemini API (for LangChain integration)
GOOGLE_API_KEY=KEY

# Development/Testing Configuration
TESTING_MODE=false
MOCK_EXTERNAL_APIS=false
